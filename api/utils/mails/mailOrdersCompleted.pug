head
	style.
		@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Raleway:wght@400;800&display=swap');
		* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		}
		.container {
		font-family: Poppins, Raleway, 'Open Sans', Arial, sans-serif;
		font-size: 100%;
		padding: 3em;
		display: flex;
		justify-content: center;
		background-color: #F5F4F8;
		color: #1B1A1F;
		}
		.main {
		font-family: Raleway, 'Open Sans', Arial, sans-serif;
		flex-basis: 50em;
		background-color: #F5F4F8;
		padding: 2em;
		border-radius: 0.5em;
		border: 4px solid #9b5df7;
		line-height: 1.5;
		margin: 0 auto;
		}
		.img-container {
		display: flex;
		justify-content: center;
		border-bottom: 1px solid #DDD;
		padding-bottom: 1em;
		margin-bottom: 1em;
		}
		.img-logo{
			margin: 0 auto;
		}
		.mail__title {
		font-family: 'Poppins', Raleway, 'Open Sans', Arial, sans-serif;
		font-size: 1.5em;
		text-transform: uppercase;
		text-align: center;
		margin-bottom: 0.5em;
		line-height: 1.2;
		}
.container
	.main
		.img-container
			img(src='cid:logo' class="img-logo")
		h1.mail__title=strings.appreciate
		p=strings.text
		ul
			each game in games
				li=game.name
		a.mail__review-button(href='#')=strings.reviewText
		p=strings.slogan
		p - GamingHUB
